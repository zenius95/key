<!DOCTYPE html>
<html lang="vi" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>License Manager Pro</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        slate: {
                            850: '#151f32',
                            900: '#0f172a',
                            950: '#020617',
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-slate-950 text-slate-200 min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="border-b border-slate-800 bg-slate-900/50 backdrop-blur-md sticky top-0 z-30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center gap-3">
                    <div
                        class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                            </path>
                        </svg>
                    </div>
                    <span class="text-lg font-bold text-white tracking-tight">License Manager</span>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-xs text-slate-400 bg-slate-800 px-3 py-1 rounded-full border border-slate-700">
                        v1.2.0
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <!-- Stats Row -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Total License -->
            <div
                class="bg-slate-900 border border-slate-800 rounded-xl p-5 shadow-sm hover:border-slate-700 transition group">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-slate-500 text-sm font-medium mb-1">Tổng số License</p>
                        <h3 class="text-2xl font-bold text-white group-hover:text-indigo-400 transition">
                            <%= stats.total %>
                        </h3>
                    </div>
                    <div class="p-2 bg-blue-500/10 rounded-lg text-blue-500">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z">
                            </path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Active License -->
            <div
                class="bg-slate-900 border border-slate-800 rounded-xl p-5 shadow-sm hover:border-slate-700 transition">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-slate-500 text-sm font-medium mb-1">Đang hoạt động</p>
                        <h3 class="text-2xl font-bold text-emerald-400">
                            <%= stats.active %>
                        </h3>
                    </div>
                    <div class="p-2 bg-emerald-500/10 rounded-lg text-emerald-500">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Inactive License -->
            <div
                class="bg-slate-900 border border-slate-800 rounded-xl p-5 shadow-sm hover:border-slate-700 transition">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-slate-500 text-sm font-medium mb-1">Ngừng kích hoạt</p>
                        <h3 class="text-2xl font-bold text-rose-400">
                            <%= stats.inactive %>
                        </h3>
                    </div>
                    <div class="p-2 bg-rose-500/10 rounded-lg text-rose-500">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toolbar (Search & Filter) -->
        <div
            class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4 bg-slate-900/50 p-1.5 rounded-2xl border border-slate-800/50 backdrop-blur-sm shadow-sm">
            <!-- Search Input -->
            <div class="relative w-full sm:flex-1">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-4 w-4 text-slate-500 transition duration-200 group-focus-within:text-indigo-400"
                        fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <input type="text" id="searchInput" placeholder="Nhập tên KH hoặc key rồi nhấn Enter..."
                    value="<%= search %>"
                    class="bg-transparent border-none text-slate-200 text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/50 block w-full pl-10 p-2.5 placeholder-slate-500 transition duration-200"
                    onkeydown="if(event.key === 'Enter') applyFilters()">
            </div>

            <div class="flex items-center gap-2 w-full sm:w-auto">
                <!-- Filter Dropdown -->
                <div
                    class="flex items-center gap-2 bg-slate-800/50 rounded-xl px-2 border border-slate-700/50 focus-within:ring-2 focus-within:ring-indigo-500/50 focus-within:border-indigo-500/50 transition">
                    <div class="pointer-events-none flex items-center pl-2">
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z">
                            </path>
                        </svg>
                    </div>
                    <select id="statusFilter"
                        class="bg-transparent border-none text-slate-300 text-sm focus:outline-none focus:ring-0 p-2.5 w-full sm:w-auto cursor-pointer font-medium outline-none">
                        <option value="all" class="bg-slate-950" <%=statusFilter==='all' ? 'selected' : '' %>>Tất cả
                            trạng thái</option>
                        <option value="active" class="bg-slate-950 text-emerald-400" <%=statusFilter==='active'
                            ? 'selected' : '' %>>Active</option>
                        <option value="trial" class="bg-slate-950 text-amber-400" <%=statusFilter==='trial' ? 'selected'
                            : '' %>>Trial</option>
                        <option value="inactive" class="bg-slate-950 text-rose-400" <%=statusFilter==='inactive'
                            ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button onclick="applyFilters()"
                    class="bg-indigo-600 hover:bg-indigo-500 text-white p-2.5 rounded-xl transition shadow-lg shadow-indigo-500/20 flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>

                <!-- Bulk Delete Button (Hidden by default) -->
                <button id="bulkDeleteBtn" onclick="deleteSelected()" style="display: none;"
                    class="bg-rose-600 hover:bg-rose-500 text-white px-4 py-2.5 rounded-xl transition shadow-lg shadow-rose-500/20 flex items-center justify-center gap-2 text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                        </path>
                    </svg>
                    <span>Xóa (<span id="selectedCount">0</span>)</span>
                </button>
            </div>
        </div>

        <!-- Table Container -->
        <div class="bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-sm flex flex-col">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead
                        class="bg-slate-850 text-xs uppercase text-slate-400 font-semibold border-b border-slate-800">
                        <tr>
                            <th class="px-6 py-4 w-[5%]">
                                <input type="checkbox" id="selectAll" onclick="toggleSelectAll()"
                                    class="rounded bg-slate-800 border-slate-700 text-indigo-600 focus:ring-indigo-500 cursor-pointer w-4 h-4">
                            </th>
                            <th class="px-6 py-4 tracking-wider w-[25%]">Khách hàng</th>
                            <th class="px-6 py-4 tracking-wider w-[30%]">License Key</th>
                            <th class="px-6 py-4 tracking-wider w-[15%]">Trạng thái</th>
                            <th class="px-6 py-4 tracking-wider w-[15%]">Hết hạn</th>
                            <th class="px-6 py-4 tracking-wider w-[10%] text-right">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800 text-sm" id="licenseTableBody">
                        <% licenses.forEach(function(license, index) { %>
                            <tr class="hover:bg-slate-800/50 transition duration-150 license-row">
                                <td class="px-6 py-4">
                                    <input type="checkbox" value="<%= license.id %>"
                                        onclick="handleRowSelect(this, event, <%= index %>)"
                                        class="row-checkbox rounded bg-slate-800 border-slate-700 text-indigo-600 focus:ring-indigo-500 cursor-pointer w-4 h-4">
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap client-name">
                                    <div class="flex items-center gap-3">
                                        <div
                                            class="w-8 h-8 rounded-full bg-slate-800 border border-slate-700 flex items-center justify-center text-xs font-bold text-slate-300 shadow-sm">
                                            <%= (license.client_name || '?' ).charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="font-medium text-slate-200">
                                            <%= license.client_name || 'Chưa đặt tên' %>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 license-key">
                                    <code
                                        class="bg-slate-950 border border-slate-800 rounded px-2.5 py-1 text-slate-400 font-mono text-xs select-all hover:text-indigo-400 hover:border-indigo-500/30 transition cursor-pointer"><%= license.key %></code>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (license.status==='active' ) { %>
                                        <span
                                            class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                                            <span
                                                class="w-1.5 h-1.5 rounded-full bg-emerald-400 mr-1.5 animate-pulse"></span>
                                            Active
                                        </span>
                                        <% } else if (license.status==='trial' ) { %>
                                            <span
                                                class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-amber-500/10 text-amber-400 border border-amber-500/20">
                                                <span class="w-1.5 h-1.5 rounded-full bg-amber-400 mr-1.5"></span> Trial
                                            </span>
                                            <% } else { %>
                                                <span
                                                    class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-slate-700/50 text-slate-400 border border-slate-700">
                                                    Inactive
                                                </span>
                                                <% } %>
                                </td>
                                <td class="px-6 py-4 text-slate-400">
                                    <%= license.expiry_date ? license.expiry_date : 'Vô thời hạn' %>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <button
                                            onclick="openEditModal('<%= license.id %>', '<%= license.client_name %>', '<%= license.key %>', '<%= license.status %>', '<%= license.expiry_date %>')"
                                            class="p-1.5 rounded-lg text-slate-400 hover:text-indigo-400 hover:bg-slate-800 transition"
                                            title="Chỉnh sửa">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                                </path>
                                            </svg>
                                        </button>
                                        <a href="/delete/<%= license.id %>"
                                            onclick="return confirm('Xác nhận xóa license này?')"
                                            class="p-1.5 rounded-lg text-slate-400 hover:text-rose-400 hover:bg-slate-800 transition"
                                            title="Xóa">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                                </path>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>

                                <% if (licenses.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                                            <svg class="w-12 h-12 mx-auto mb-3 text-slate-700" fill="none"
                                                stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                                    d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4">
                                                </path>
                                            </svg>
                                            <p>Không tìm thấy kết quả phù hợp.</p>
                                        </td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages> 1) { %>
                <div class="px-6 py-4 border-t border-slate-800 flex items-center justify-between">
                    <div class="text-sm text-slate-500">
                        Trang <span class="font-medium text-white">
                            <%= currentPage %>
                        </span> / <span class="font-medium text-white">
                            <%= totalPages %>
                        </span>
                    </div>
                    <div class="flex gap-2">
                        <% const buildUrl=(p)=> `/?page=${p}&search=${search}&status=${statusFilter}`;
                            %>

                            <% if (currentPage> 1) { %>
                                <a href="<%= buildUrl(currentPage - 1) %>"
                                    class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition">Trước</a>
                                <% } %>

                                    <% let startPage=Math.max(1, currentPage - 2); let endPage=Math.min(totalPages,
                                        currentPage + 2); if (startPage> 1) {
                                        %>
                                        <a href="<%= buildUrl(1) %>"
                                            class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition <%= currentPage === 1 ? 'bg-indigo-600 border-indigo-500 text-white' : '' %>">1</a>
                                        <% if (startPage> 2) { %><span class="px-2 py-1.5 text-slate-600">...</span>
                                            <% } %>
                                                <% } %>

                                                    <% for(let i=startPage; i <=endPage; i++) { %>
                                                        <a href="<%= buildUrl(i) %>"
                                                            class="px-3 py-1.5 rounded-lg border <%= currentPage === i ? 'bg-indigo-600 border-indigo-500 text-white shadow-lg shadow-indigo-500/25' : 'border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800' %> text-xs font-medium transition">
                                                            <%= i %>
                                                        </a>
                                                        <% } %>

                                                            <% if (endPage < totalPages) { %>
                                                                <% if (endPage < totalPages - 1) { %><span
                                                                        class="px-2 py-1.5 text-slate-600">...</span>
                                                                    <% } %>
                                                                        <a href="<%= buildUrl(totalPages) %>"
                                                                            class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition <%= currentPage === totalPages ? 'bg-indigo-600 border-indigo-500 text-white' : '' %>">
                                                                            <%= totalPages %>
                                                                        </a>
                                                                        <% } %>

                                                                            <% if (currentPage < totalPages) { %>
                                                                                <a href="<%= buildUrl(currentPage + 1) %>"
                                                                                    class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition">Sau</a>
                                                                                <% } %>
                    </div>
                </div>
                <% } %>

        </div>

    </main>

    <!-- Edit Modal -->
    <div id="editModalOverlay" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity" onclick="closeEditModal()"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div
                    class="relative transform overflow-hidden rounded-xl bg-slate-900 border border-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">

                    <div class="px-6 py-5 border-b border-slate-800 flex justify-between items-center">
                        <h3 class="text-base font-semibold leading-6 text-white" id="modal-title">Cập nhật License</h3>
                        <button onclick="closeEditModal()" class="text-slate-400 hover:text-white transition">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>

                    <form action="/update" method="POST" class="p-6 space-y-5">
                        <input type="hidden" name="id" id="edit_id">

                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1.5">License Key</label>
                            <input type="text" name="key" id="edit_key" required readonly
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2.5 text-slate-400 font-mono text-sm focus:outline-none cursor-not-allowed">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1.5">Khách hàng</label>
                            <input type="text" name="client_name" id="edit_name" placeholder="Nhập tên khách hàng"
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2.5 text-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/50  placeholder-slate-600 transition">
                        </div>

                        <div class="grid grid-cols-2 gap-5">
                            <div>
                                <label class="block text-sm font-medium text-slate-300 mb-1.5">Trạng thái</label>
                                <div class="relative">
                                    <select name="status" id="edit_status"
                                        class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2.5 text-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/50 appearance-none">
                                        <option value="active">Active</option>
                                        <option value="trial">Trial</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                    <div
                                        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-slate-500">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M8.25 15L12 18.75 15.75 15m-7.5-6L12 5.25 15.75 9" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-300 mb-1.5">Hết hạn</label>
                                <input type="date" name="expiry_date" id="edit_date"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2.5 text-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500/50 [color-scheme:dark]">
                            </div>
                        </div>

                        <!-- Date Adjustment -->
                        <div
                            class="bg-slate-950/50 rounded-lg p-3 border border-slate-800/50 flex flex-col sm:flex-row items-center justify-between gap-3">
                            <span class="text-xs font-medium text-slate-400">Gia hạn nhanh:</span>
                            <div class="flex items-center gap-2">
                                <input type="number" id="days_input" value="30" min="1"
                                    class="w-16 bg-slate-900 border border-slate-800 rounded px-2 py-1 text-xs text-center text-white focus:outline-none focus:ring-1 focus:ring-indigo-500/50 focus:border-indigo-500">

                                <button type="button" onclick="adjustDate(1)"
                                    class="px-2.5 py-1 bg-slate-800 hover:bg-emerald-500/10 hover:text-emerald-400 hover:border-emerald-500/20 border border-slate-700 rounded text-xs text-slate-300 transition">+
                                    Thêm</button>
                                <button type="button" onclick="adjustDate(-1)"
                                    class="px-2.5 py-1 bg-slate-800 hover:bg-rose-500/10 hover:text-rose-400 hover:border-rose-500/20 border border-slate-700 rounded text-xs text-slate-300 transition">-
                                    Bớt</button>

                                <button type="button" onclick="resetDate()" title="Về hôm nay"
                                    class="px-2.5 py-1 bg-slate-800 hover:bg-indigo-500/10 hover:text-indigo-400 hover:border-indigo-500/20 border border-slate-700 rounded text-xs text-slate-300 transition flex items-center gap-1">
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                                        </path>
                                    </svg>
                                    Hôm nay
                                </button>
                            </div>
                        </div>

                        <div class="pt-2 flex justify-end gap-3">
                            <button type="button" onclick="closeEditModal()"
                                class="px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:bg-slate-800 transition">Hủy
                                bỏ</button>
                            <button type="submit"
                                class="px-4 py-2 rounded-lg text-sm font-medium bg-indigo-600 hover:bg-indigo-500 text-white shadow-lg shadow-indigo-500/20 transition">Lưu
                                thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const editModal = document.getElementById('editModalOverlay');

        function openEditModal(id, name, key, status, date) {
            document.getElementById('edit_id').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_key').value = key;
            document.getElementById('edit_status').value = status;
            document.getElementById('edit_date').value = date;

            editModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeEditModal() {
            editModal.classList.add('hidden');
            document.body.style.overflow = '';
        }

        function resetDate() {
            const dateInput = document.getElementById('edit_date');
            const now = new Date();
            const yyyy = now.getFullYear();
            const mm = String(now.getMonth() + 1).padStart(2, '0');
            const dd = String(now.getDate()).padStart(2, '0');
            dateInput.value = `${yyyy}-${mm}-${dd}`;
        }

        function adjustDate(multiplier) {
            const dateInput = document.getElementById('edit_date');
            const daysInput = document.getElementById('days_input');
            const days = parseInt(daysInput.value) || 0;

            if (!dateInput.value) {
                resetDate(); // If empty, start from today
            }

            const currentDate = new Date(dateInput.value);
            currentDate.setDate(currentDate.getDate() + (days * multiplier));

            const yyyy = currentDate.getFullYear();
            const mm = String(currentDate.getMonth() + 1).padStart(2, '0');
            const dd = String(currentDate.getDate()).padStart(2, '0');

            dateInput.value = `${yyyy}-${mm}-${dd}`;
        }

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeEditModal();
        });

        // Server-side Search and Filter logic
        function applyFilters() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const searchValue = searchInput.value.trim();
            const statusValue = statusFilter.value;

            // Construct URL
            const url = new URL(window.location.href);
            url.searchParams.set('page', 1); // Reset to page 1 on new filter

            if (searchValue) {
                url.searchParams.set('search', searchValue);
            } else {
                url.searchParams.delete('search');
            }

            if (statusValue !== 'all') {
                url.searchParams.set('status', statusValue);
            } else {
                url.searchParams.delete('status');
            }

            window.location.href = url.toString();
        }

        // Bulk Delete & Checkbox Logic
        let lastCheckedIndex = null;
        const checkboxes = document.querySelectorAll('.row-checkbox');

        function updateBulkDeleteUI() {
            const checkboxes = document.querySelectorAll('.row-checkbox');
            const selectedCount = Array.from(checkboxes).filter(cb => cb.checked).length;
            const btn = document.getElementById('bulkDeleteBtn');
            const countSpan = document.getElementById('selectedCount');
            const selectAll = document.getElementById('selectAll');

            countSpan.innerText = selectedCount;
            if (selectedCount > 0) {
                btn.style.display = 'flex';
            } else {
                btn.style.display = 'none';
            }

            // Update Select All State
            selectAll.checked = selectedCount === checkboxes.length && checkboxes.length > 0;
            selectAll.indeterminate = selectedCount > 0 && selectedCount < checkboxes.length;
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.row-checkbox');
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
            updateBulkDeleteUI();
        }

        function handleRowSelect(checkbox, event, index) {
            const checkboxes = document.querySelectorAll('.row-checkbox');

            // Handle Shift + Click
            if (event.shiftKey && lastCheckedIndex !== null) {
                const start = Math.min(lastCheckedIndex, index);
                const end = Math.max(lastCheckedIndex, index);

                for (let i = start; i <= end; i++) {
                    checkboxes[i].checked = checkbox.checked;
                }
            }

            lastCheckedIndex = index;
            updateBulkDeleteUI();
        }

        async function deleteSelected() {
            const checkboxes = document.querySelectorAll('.row-checkbox:checked');
            const ids = Array.from(checkboxes).map(cb => cb.value);

            if (ids.length === 0) return;

            if (!confirm(`Bạn có chắc chắn muốn xóa ${ids.length} license đã chọn? Hành động này không thể hoàn tác.`)) {
                return;
            }

            try {
                const response = await fetch('/delete-bulk', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ ids })
                });

                const result = await response.json();

                if (result.success) {
                    window.location.reload();
                } else {
                    alert('Lỗi: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi xóa.');
            }
        }
    </script>
