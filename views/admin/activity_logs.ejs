<!-- Toolbar (Filter) -->
<!-- Toolbar (Filter) -->
<div
    class="flex flex-col xl:flex-row justify-between items-start xl:items-center mb-6 gap-4 bg-slate-900/50 p-1.5 rounded-2xl border border-slate-800/50 backdrop-blur-sm shadow-sm">
    <!-- Search Input -->
    <div class="relative w-full sm:flex-1">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i
                class="ri-search-line text-slate-500 text-lg group-focus-within:text-indigo-400 transition duration-200"></i>
        </div>
        <input type="text" id="searchInput" placeholder="Tìm kiếm mã giao dịch..."
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="bg-transparent border-none text-slate-200 text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/50 block w-full pl-10 p-2.5 placeholder-slate-500 transition duration-200"
            onkeydown="if(event.key === 'Enter') applyFilters()">
    </div>

    <div class="flex items-center gap-2 w-full sm:w-auto">

        <!-- User Filter Input -->
        <div class="relative w-full sm:w-64">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="ri-user-search-line text-slate-500"></i>
            </div>
            <input type="text" id="userFilterInput" placeholder="Tên user/email..."
                value="<%= typeof userSearch !== 'undefined' ? userSearch : '' %>"
                onkeydown="if(event.key === 'Enter') applyFilters()"
                class="bg-transparent border-none text-slate-200 text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500/50 block w-full pl-10 p-2.5 placeholder-slate-500 transition duration-200">
        </div>

        <!-- Role Filter -->
        <div
            class="flex items-center gap-2 bg-slate-800/50 rounded-xl px-2 border border-slate-700/50 focus-within:ring-2 focus-within:ring-indigo-500/50 focus-within:border-indigo-500/50 transition w-full sm:w-auto hover:bg-slate-800">
            <div class="pointer-events-none flex items-center pl-2">
                <i class="ri-shield-user-line text-slate-400"></i>
            </div>
            <select id="typeFilter" onchange="applyFilters()"
                class="bg-transparent border-none text-slate-300 text-sm focus:outline-none focus:ring-0 p-2.5 w-full sm:w-auto cursor-pointer font-medium outline-none">
                <option value="" class="bg-slate-950" <%=typeof type==='undefined' || type==='' ? 'selected' : '' %>>Tất
                    cả tài khoản</option>
                <option value="admin" class="bg-slate-950" <%=typeof type !=='undefined' && type==='admin' ? 'selected'
                    : '' %>>ADMIN</option>
                <option value="client" class="bg-slate-950" <%=typeof type !=='undefined' && type==='client'
                    ? 'selected' : '' %>>CLIENT</option>
            </select>
        </div>

        <!-- Action Filter -->
        <div
            class="flex items-center gap-2 bg-slate-800/50 rounded-xl px-2 border border-slate-700/50 focus-within:ring-2 focus-within:ring-indigo-500/50 focus-within:border-indigo-500/50 transition w-full sm:w-auto hover:bg-slate-800">
            <div class="pointer-events-none flex items-center pl-2">
                <i class="ri-cursor-line text-slate-400"></i>
            </div>
            <select id="actionFilter" onchange="applyFilters()"
                class="bg-transparent border-none text-slate-300 text-sm focus:outline-none focus:ring-0 p-2.5 w-full sm:w-auto cursor-pointer font-medium outline-none">
                <option value="all" class="bg-slate-950" <%=actionFilter==='all' ? 'selected' : '' %>>Tất cả hành động
                </option>
                <% Object.keys(activityActions).forEach(action=> { %>
                    <option value="<%= action %>" class="bg-slate-950" <%=actionFilter===action ? 'selected' : '' %>
                        >
                        <%= activityActions[action] %>
                    </option>
                    <% }); %>
            </select>
        </div>
    </div>

    <!-- Refresh Button -->
    <!-- Submit Button (Search) -->
    <button onclick="applyFilters()"
        class="bg-indigo-600 hover:bg-indigo-500 text-white p-2.5 rounded-xl transition shadow-lg shadow-indigo-500/20 flex items-center justify-center aspect-square">
        <i class="ri-search-line text-lg w-5 h-5 flex items-center justify-center"></i>
    </button>
</div>

<!-- Logs Table -->
<div class="bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-sm flex flex-col">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead class="bg-slate-850 text-[10px] uppercase text-slate-400 font-semibold border-b border-slate-800">
                <tr>
                    <th class="px-6 py-4 w-[15%]">Thời gian</th>
                    <th class="px-6 py-4 w-[15%]">Người dùng</th>
                    <th class="px-6 py-4 w-[10%]">Hành động</th>
                    <th class="px-6 py-4 w-[25%]">Mô tả</th>
                    <th class="px-6 py-4 w-[10%] text-right">Thay đổi</th>
                    <th class="px-6 py-4 w-[10%] text-right">Số dư</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-800 text-sm">
                <% logs.forEach(function(log) { %>
                    <tr class="hover:bg-slate-800/50 transition duration-150">
                        <td class="px-6 py-4 text-slate-400 whitespace-nowrap">
                            <%= new Date(log.createdAt).toLocaleString('vi-VN') %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-2">
                                <div
                                    class="w-6 h-6 rounded-full bg-slate-800 border border-slate-700 flex items-center justify-center text-xs font-bold text-slate-300 shadow-sm">
                                    <%= (log.user?.full_name || log.user?.email || '?' ).charAt(0).toUpperCase() %>
                                </div>
                                <span class="text-slate-200 font-medium text-xs">
                                    <%= log.user?.email || 'Unknown' %>
                                </span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <% let badgeClass='bg-slate-700/50 text-slate-400 border-slate-700' ; if
                                (log.action==='LOGIN' ) badgeClass='bg-blue-500/10 text-blue-400 border-blue-500/20' ;
                                else if (log.action==='PURCHASE' )
                                badgeClass='bg-indigo-500/10 text-indigo-400 border-indigo-500/20' ; else if
                                (log.action==='BALANCE_UPDATE' )
                                badgeClass='bg-emerald-500/10 text-emerald-400 border-emerald-500/20' ; else if
                                (log.action==='USER_UPDATE' )
                                badgeClass='bg-orange-500/10 text-orange-400 border-orange-500/20' ; else if
                                (log.action==='DEPOSIT' )
                                badgeClass='bg-emerald-500/10 text-emerald-400 border-emerald-500/20' ; %>
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold border uppercase tracking-wider <%= badgeClass %>">
                                    <%= log.action %>
                                </span>
                        </td>
                        <td class="px-6 py-4 text-slate-300 relative group">
                            <div class="whitespace-normal break-words max-w-xs">
                                <%= activityActions[log.action] || log.action %>
                                    <% if (log.transactionId) { %>
                                        <div class="text-[10px] text-indigo-400 font-mono mt-1">
                                            <% if (['CREATE_ORDER', 'UPDATE_ORDER' , 'DELETE_ORDER' , 'UPGRADE_ORDER'
                                                ].includes(log.action)) { %>
                                                Đơn hàng #<%= log.transactionId %>
                                                    <% } else if (['CREATE_PRODUCT', 'UPDATE_PRODUCT' , 'DELETE_PRODUCT'
                                                        ].includes(log.action)) { %>
                                                        Sản phẩm #<%= log.transactionId %>
                                                            <% } else if (['DELETE_USER', 'USER_UPDATE'
                                                                , 'BALANCE_UPDATE' ].includes(log.action)) { %>
                                                                User ID: <%= log.transactionId %>
                                                                    <% } else if (log.action==='BULK_DELETE_ORDER' ) {
                                                                        %>
                                                                        Đơn hàng: <%= log.transactionId %>
                                                                            <% } else if
                                                                                (log.action==='BULK_DELETE_USER' ) { %>
                                                                                Users: <%= log.transactionId %>
                                                                                    <% } else if (log.action==='DEPOSIT'
                                                                                        ) { %>
                                                                                        GD: <%= log.transactionId %>
                                                                                            <% } else { %>
                                                                                                #<%= log.transactionId
                                                                                                    %>
                                                                                                    <% } %>
                                        </div>
                                        <% } %>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right font-medium">
                            <% if (parseFloat(log.balanceChange) !==0) { %>
                                <span
                                    class="<%= parseFloat(log.balanceChange) > 0 ? 'text-emerald-400' : 'text-rose-400' %>">
                                    <%= parseFloat(log.balanceChange)> 0 ? '+' : '' %><%= new Intl.NumberFormat('vi-VN',
                                            { style: 'currency' , currency: 'VND' }).format(log.balanceChange) %>
                                </span>
                                <% } else { %>
                                    <span class="text-slate-600">-</span>
                                    <% } %>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <% if (log.newBalance !==null) { %>
                                <span class="text-slate-300 font-medium">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                        }).format(log.newBalance) %>
                                </span>
                                <% } else { %>
                                    <span class="text-slate-600">-</span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }); %>

                        <% if (logs.length===0) { %>
                            <tr>
                                <td colspan="6" class="px-6 py-12 text-center text-slate-500">
                                    <p>Không tìm thấy nhật ký hoạt động nào.</p>
                                </td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (totalPages> 1) { %>
        <%- include('../partials/pagination', { path: '/admin/activity-logs' , query: query, currentPage: currentPage,
            totalPages: totalPages }) %>
            <% } %>
</div>

<script>
    function applyFilters() {
        const actionFilter = document.getElementById('actionFilter').value;
        const userFilter = document.getElementById('userFilterInput').value;
        const searchInput = document.getElementById('searchInput').value;
        const typeFilter = document.getElementById('typeFilter').value;

        const url = new URL(window.location.href);
        url.searchParams.set('page', 1);

        if (actionFilter !== 'all') {
            url.searchParams.set('action', actionFilter);
        } else {
            url.searchParams.delete('action');
        }

        if (typeFilter) {
            url.searchParams.set('type', typeFilter);
        } else {
            url.searchParams.delete('type');
        }

        if (userFilter) {
            url.searchParams.set('user_search', userFilter);
        } else {
            url.searchParams.delete('user_search');
        }

        if (searchInput) {
            url.searchParams.set('search', searchInput);
        } else {
            url.searchParams.delete('search');
        }

        window.location.href = url.toString();
    }
</script>