<!-- Manage Balance Modal -->

<script src="/js/admin-core.js"></script>
<script>
    // Shared Bulk Actions
    new TableManager({
        deleteUrl: '/users/delete-bulk',
        confirmMessage: 'Bạn có chắc chắn muốn xóa {count} người dùng?'
    });

    const editModal = document.getElementById('editModalOverlay');

    function openEditModal(id, fullName, email, phone, role, balance) {
        document.getElementById('edit_id').value = id;
        document.getElementById('edit_full_name').value = fullName;
        document.getElementById('edit_email').value = email;
        document.getElementById('edit_phone').value = phone;
        document.getElementById('edit_role').value = role;

        // Reset Balance Adjustment
        document.getElementById('edit_balance_adjustment').value = 0;
        document.getElementById('edit_password').value = '';

        // Store initial balance for calculation
        document.getElementById('edit_balance_display').setAttribute('data-initial', balance);
        updateBalanceDisplay(parseFloat(balance));

        // Reset Indicator
        document.getElementById('balance_change_indicator').classList.add('hidden');

        document.getElementById('quick_balance_amount').value = '';

        editModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function updateBalance(type) {
        const inputAmount = document.getElementById('quick_balance_amount');
        const modificationInput = document.getElementById('edit_balance_adjustment');
        const display = document.getElementById('edit_balance_display');

        const amount = parseFloat(inputAmount.value);
        if (isNaN(amount) || amount <= 0) {
            alert('Vui lòng nhập số tiền hợp lệ');
            return;
        }

        let currentModification = parseFloat(modificationInput.value) || 0;
        if (type === 'add') {
            currentModification += amount;
        } else {
            currentModification -= amount;
        }

        modificationInput.value = currentModification;

        // Update Display
        const initialBalance = parseFloat(display.getAttribute('data-initial')) || 0;
        const newTotal = initialBalance + currentModification;
        updateBalanceDisplay(newTotal);

        // Update Indicator
        const indicator = document.getElementById('balance_change_indicator');
        if (currentModification !== 0) {
            indicator.classList.remove('hidden');
            const isPositive = currentModification > 0;
            indicator.className = `text-sm font-bold ${isPositive ? 'text-emerald-400' : 'text-rose-400'}`;
            indicator.innerText = `${isPositive ? '+' : ''}${new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(currentModification)}`;
        } else {
            indicator.classList.add('hidden');
        }

        // Clear input for next entry
        inputAmount.value = '';
    }

    function resetBalance() {
        document.getElementById('edit_balance_adjustment').value = 0;
        document.getElementById('quick_balance_amount').value = '';

        const display = document.getElementById('edit_balance_display');
        const initialBalance = parseFloat(display.getAttribute('data-initial')) || 0;
        updateBalanceDisplay(initialBalance);

        document.getElementById('balance_change_indicator').classList.add('hidden');
    }

    function updateBalanceDisplay(amount) {
        document.getElementById('edit_balance_display').innerText = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
    }

    function closeEditModal() {
        editModal.classList.add('hidden');
        document.body.style.overflow = '';
    }

    // Search Filter Logic
    function applyFilters() {
        const searchInput = document.getElementById('searchInput');
        const searchValue = searchInput.value.trim();
        const roleFilter = document.getElementById('roleFilter').value;

        const url = new URL(window.location.href);
        url.searchParams.set('page', 1);

        if (searchValue) {
            url.searchParams.set('search', searchValue);
        } else {
            url.searchParams.delete('search');
        }

        if (roleFilter && roleFilter !== 'all') {
            url.searchParams.set('role', roleFilter);
        } else {
            url.searchParams.delete('role');
        }

        window.location.href = url.toString();
    }
</script>