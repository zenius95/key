<!DOCTYPE html>
<html lang="vi" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>License Manager Pro - Client Area</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/css/style.css?v=2" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: { sans: ['Quicksand', 'sans-serif'], },
                    colors: { slate: { 850: '#151f32', 900: '#0f172a', 950: '#020617', } }
                }
            }
        }
    </script>
</head>

<body class="bg-slate-950 text-slate-200 min-h-screen flex">

    <!-- Mobile Overlay -->
    <div id="sidebarOverlay" onclick="toggleSidebar()"
        class="fixed inset-0 bg-slate-950/80 z-40 hidden backdrop-blur-sm transition-opacity opacity-0">
    </div>

    <!-- Mobile Header -->
    <header
        class="md:hidden fixed top-0 inset-x-0 h-16 bg-slate-900/90 backdrop-blur-xl border-b border-slate-800 z-30 flex items-center justify-between px-4">
        <div class="flex items-center gap-3">
            <div
                class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-indigo-500/30">
                <i class="ri-flashlight-fill text-white text-lg"></i>
            </div>
            <span class="text-lg font-bold text-white tracking-tight">Client Portal</span>
        </div>
        <button onclick="toggleSidebar()"
            class="p-2 text-slate-400 hover:text-white rounded-lg active:bg-slate-800 transition">
            <i class="ri-menu-4-line text-2xl"></i>
        </button>
    </header>

    <!-- Sidebar -->
    <aside id="mainSidebar"
        class="w-64 md:w-24 2xl:w-64 bg-slate-900 border-r border-slate-800 flex flex-col fixed inset-y-0 z-50 transform -translate-x-full md:translate-x-0 transition-all duration-300 shadow-2xl md:shadow-none">
        <!-- Logo -->
        <!-- Logo -->
        <div class="h-16 flex items-center px-6 border-b border-slate-800">
            <div class="flex items-center gap-3">
                <div
                    class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-indigo-500/30 shrink-0">
                    <i class="ri-flashlight-fill text-white text-lg"></i>
                </div>
                <span class="text-lg font-bold text-white tracking-tight md:hidden 2xl:block">Client Portal</span>
            </div>
        </div>

        <!-- Menu -->
        <nav class="flex-1 px-4 md:px-2 2xl:px-4 py-6 space-y-1">
            <a href="/"
                class="flex 2xl:flex-row flex-row md:flex-col items-center gap-3 md:gap-1 px-4 md:px-0 2xl:px-4 py-3 text-sm md:text-[10px] 2xl:text-sm font-medium rounded-xl transition-all duration-200 justify-start md:justify-center 2xl:justify-start md:text-center <%= (typeof activeTab !== 'undefined' && activeTab === 'dashboard') ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:bg-slate-800 hover:text-white' %>">
                <i class="ri-dashboard-3-line text-lg md:text-xl 2xl:text-lg"></i>
                <span class="md:block">Tổng quan</span>
            </a>

            <!-- Future: Buy Package -->
            <a href="/deposit"
                class="flex 2xl:flex-row flex-row md:flex-col items-center gap-3 md:gap-1 px-4 md:px-0 2xl:px-4 py-3 text-sm md:text-[10px] 2xl:text-sm font-medium rounded-xl transition-all duration-200 justify-start md:justify-center 2xl:justify-start md:text-center <%= (typeof activeTab !== 'undefined' && activeTab === 'deposit') ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:bg-slate-800 hover:text-white' %>">
                <i class="ri-wallet-3-line text-lg md:text-xl 2xl:text-lg"></i>
                <span class="md:block">Nạp tiền</span>
            </a>

            <a href="/buy"
                class="flex 2xl:flex-row flex-row md:flex-col items-center gap-3 md:gap-1 px-4 md:px-0 2xl:px-4 py-3 text-sm md:text-[10px] 2xl:text-sm font-medium rounded-xl transition-all duration-200 justify-start md:justify-center 2xl:justify-start md:text-center <%= (typeof activeTab !== 'undefined' && activeTab === 'buy') ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:bg-slate-800 hover:text-white' %>">
                <i class="ri-shopping-cart-2-line text-lg md:text-xl 2xl:text-lg"></i>
                <span class="md:block">Mua gói</span>
            </a>

            <a href="/history"
                class="flex 2xl:flex-row flex-row md:flex-col items-center gap-3 md:gap-1 px-4 md:px-0 2xl:px-4 py-3 text-sm md:text-[10px] 2xl:text-sm font-medium rounded-xl transition-all duration-200 justify-start md:justify-center 2xl:justify-start md:text-center <%= (typeof activeTab !== 'undefined' && activeTab === 'history') ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:bg-slate-800 hover:text-white' %>">
                <i class="ri-history-line text-lg md:text-xl 2xl:text-lg"></i>
                <span class="md:block">Lịch sử</span>
            </a>
        </nav>

        <!-- User Info Bottom -->
        <div class="p-4 border-t border-slate-800 relative">
            <!-- Dropdown Menu -->
            <div id="userDropdown"
                class="hidden absolute bottom-full left-4 right-4 mb-2 bg-slate-800 border border-slate-700 rounded-xl shadow-xl overflow-hidden transition-all duration-200 origin-bottom transform scale-95 opacity-0">
                <a href="/profile"
                    class="flex items-center gap-3 px-4 py-3 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                    <i class="ri-user-settings-line text-indigo-400 text-lg"></i>
                    Thông tin cá nhân
                </a>
                <% if (user.role==='admin' ) { %>
                    <div class="h-px bg-slate-700 mx-2"></div>
                    <a href="/admin"
                        class="flex items-center gap-3 px-4 py-3 text-sm text-slate-300 hover:bg-slate-700 hover:text-white transition">
                        <i class="ri-shield-keyhole-line text-indigo-400 text-lg"></i>
                        Truy cập Admin
                    </a>
                    <% } %>
                        <div class="h-px bg-slate-700 mx-2"></div>
                        <a href="/logout"
                            class="flex items-center gap-3 px-4 py-3 text-sm text-slate-300 hover:bg-rose-900/20 hover:text-rose-400 transition">
                            <i class="ri-logout-box-r-line text-rose-400 text-lg"></i>
                            Đăng xuất
                        </a>
            </div>

            <!-- User Toggle -->
            <button onclick="toggleUserDropdown()"
                class="w-full bg-slate-900 hover:bg-slate-800 rounded-2xl p-3 md:px-0 2xl:p-3 flex items-center gap-3 md:justify-center 2xl:justify-start transition group border border-slate-800 hover:border-slate-700 shadow-sm">
                <div
                    class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm shadow-md group-hover:shadow-indigo-500/20 transition shrink-0 ring-2 ring-slate-900 group-hover:ring-indigo-500/30">
                    <%= user.full_name.charAt(0).toUpperCase() %>
                </div>
                <div class="flex-1 text-left min-w-0 md:hidden 2xl:block">
                    <p
                        class="text-sm font-bold text-white truncate mb-0.5 group-hover:text-indigo-200 transition-colors">
                        <%= user.full_name %>
                    </p>
                    <div class="flex items-center text-emerald-400 gap-1.5">
                        <i class="ri-wallet-3-fill text-xs opacity-80"></i>
                        <span class="text-xs font-bold font-mono tracking-tight opacity-90">
                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                }).format(user.balance) %>
                        </span>
                    </div>
                </div>
                <i id="dropdownArrow"
                    class="ri-arrow-down-s-line text-slate-500 group-hover:text-white transition transform duration-200 text-lg md:hidden 2xl:block"></i>
            </button>


            <script>
                function toggleUserDropdown() {
                    const dropdown = document.getElementById('userDropdown');
                    const arrow = document.getElementById('dropdownArrow');

                    if (dropdown.classList.contains('hidden')) {
                        // Show
                        dropdown.classList.remove('hidden');
                        // Small delay to allow transition
                        requestAnimationFrame(() => {
                            dropdown.classList.remove('scale-95', 'opacity-0');
                            dropdown.classList.add('scale-100', 'opacity-100');
                            arrow.classList.add('rotate-180');
                        });
                    } else {
                        // Hide
                        dropdown.classList.remove('scale-100', 'opacity-100');
                        dropdown.classList.add('scale-95', 'opacity-0');
                        arrow.classList.remove('rotate-180');

                        setTimeout(() => {
                            dropdown.classList.add('hidden');
                        }, 200); // Match duration
                    }
                }

                // Close when clicking outside
                document.addEventListener('click', function (event) {
                    const dropdown = document.getElementById('userDropdown');
                    const button = event.target.closest('button');
                    const isClickInside = button && button.getAttribute('onclick') === 'toggleUserDropdown()';

                    if (!isClickInside && !dropdown.contains(event.target) && !dropdown.classList.contains('hidden')) {
                        toggleUserDropdown();
                    }
                });
            </script>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 md:ml-24 2xl:ml-64 ml-0 py-20 overflow-y-auto h-screen relative z-10">
        <!-- Header -->

        <!-- Body -->
        <%- body %>

    </main>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('mainSidebar');
            const overlay = document.getElementById('sidebarOverlay');

            // Toggle Translate
            if (sidebar.classList.contains('-translate-x-full')) {
                // OPEN
                sidebar.classList.remove('-translate-x-full');
                // Show overlay
                overlay.classList.remove('hidden');
                // Small delay for fade in
                requestAnimationFrame(() => {
                    overlay.classList.remove('opacity-0');
                });
            } else {
                // CLOSE
                sidebar.classList.add('-translate-x-full');
                // Fade out overlay
                overlay.classList.add('opacity-0');
                setTimeout(() => {
                    overlay.classList.add('hidden');
                }, 300);
            }
        }
    </script>
</body>

</html>