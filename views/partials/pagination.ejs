<% var total=(typeof totalItems !=='undefined' ) ? Number(totalItems) : 0; var pages=(typeof totalPages !=='undefined' )
    ? Number(totalPages) : 0; var current=(typeof currentPage !=='undefined' ) ? Number(currentPage) : 1; var
    lim=(typeof limit !=='undefined' ) ? Number(limit) : 10; var shouldShow=(total> 0) || (pages > 1);

    if (shouldShow) {
    var delta = 2;
    var range = [];
    var rangeWithDots = [];
    var l;

    if (pages > 1) {
    range.push(1);
    for (var i = current - delta; i <= current + delta; i++) { if (i < pages && i> 1) {
        range.push(i);
        }
        }
        if (pages > 1) range.push(pages);

        for (var k = 0; k < range.length; k++) { var i=range[k]; if (l) { if (i - l===2) { rangeWithDots.push(l + 1); }
            else if (i - l !==1) { rangeWithDots.push('...'); } } rangeWithDots.push(i); l=i; } } function buildUrl(p) {
            var urlParams=new URLSearchParams(query); urlParams.set('page', p); return path + '?' +
            urlParams.toString(); } %>

            <div class="px-6 py-4 border-t border-slate-800 flex items-center justify-between">
                <div class="text-sm text-slate-500">
                    <% if (total> 0) { %>
                        Hiển thị <span class="font-medium text-white">
                            <%= (current - 1) * lim + 1 %>
                        </span> - <span class="font-medium text-white">
                            <%= Math.min(current * lim, total) %>
                        </span> trong tổng số <span class="font-medium text-white">
                            <%= total %>
                        </span> kết quả
                        <% } else { %>
                            Trang <span class="font-medium text-white">
                                <%= current %>
                            </span> / <span class="font-medium text-white">
                                <%= pages %>
                            </span>
                            <% } %>
                </div>

                <% if (pages> 1) { %>
                    <div class="flex gap-2 items-center">
                        <% if (current> 1) { %>
                            <a href="<%= buildUrl(current - 1) %>"
                                class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition">Trước</a>
                            <% } else { %>
                                <span
                                    class="px-3 py-1.5 rounded-lg border border-slate-800 text-slate-600 text-xs font-medium cursor-not-allowed">Trước</span>
                                <% } %>

                                    <div class="hidden sm:flex gap-1">
                                        <% rangeWithDots.forEach(function(p) { %>
                                            <% if (p==='...' ) { %>
                                                <span
                                                    class="px-2 py-1.5 text-slate-500 text-xs text-center items-end flex h-full">...</span>
                                                <% } else { %>
                                                    <a href="<%= buildUrl(p) %>"
                                                        class="min-w-[32px] px-2 py-1.5 rounded-lg border text-xs font-medium transition text-center <%= current === p ? 'bg-indigo-600 border-indigo-600 text-white' : 'border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800' %>">
                                                        <%= p %>
                                                    </a>
                                                    <% } %>
                                                        <% }); %>
                                    </div>

                                    <% if (current < pages) { %>
                                        <a href="<%= buildUrl(current + 1) %>"
                                            class="px-3 py-1.5 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:bg-slate-800 text-xs font-medium transition">Tiếp</a>
                                        <% } else { %>
                                            <span
                                                class="px-3 py-1.5 rounded-lg border border-slate-800 text-slate-600 text-xs font-medium cursor-not-allowed">Tiếp</span>
                                            <% } %>
                    </div>
                    <% } %>
            </div>
            <% } %>