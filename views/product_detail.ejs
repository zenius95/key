<!DOCTYPE html>
<html lang="vi" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> - Packages
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        slate: {
                            850: '#151f32',
                            900: '#0f172a',
                            950: '#020617',
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-slate-950 text-slate-200 min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="border-b border-slate-800 bg-slate-900/50 backdrop-blur-md sticky top-0 z-30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Same Navbar as other pages -->
                <div class="flex items-center gap-3">
                    <div
                        class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                            </path>
                        </svg>
                    </div>
                    <span class="text-lg font-bold text-white tracking-tight">License Manager</span>
                </div>
                <div class="flex items-center gap-4">
                    <a href="/logout"
                        class="text-sm text-slate-400 hover:text-white transition flex items-center gap-1.5 px-3 py-1.5 rounded-lg hover:bg-slate-800">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                            </path>
                        </svg>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/products"
                        class="inline-flex items-center text-sm font-medium text-slate-400 hover:text-white">
                        Products
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-slate-500 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 9 4-4-4-4" />
                        </svg>
                        <span class="ml-1 text-sm font-medium text-indigo-400 md:ml-2">
                            <%= product.name %>
                        </span>
                    </div>
                </li>
            </ol>
        </nav>

        <div class="flex justify-between items-center mb-6">
            <div>
                <h2 class="text-xl font-bold text-white">
                    <%= product.name %> Packages
                </h2>
                <p class="text-slate-400 text-sm">
                    <%= product.description %>
                </p>
            </div>
            <% if (user.role==='admin' ) { %>
                <div class="flex gap-2">
                    <!-- Edit Product Button (Could be added here) -->
                    <button onclick="document.getElementById('addPackageModal').classList.remove('hidden')"
                        class="bg-emerald-600 hover:bg-emerald-500 text-white px-4 py-2 rounded-xl transition shadow-lg shadow-emerald-500/20 flex items-center gap-2 text-sm font-medium">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4">
                            </path>
                        </svg>
                        Add Package
                    </button>
                </div>
                <% } %>
        </div>

        <!-- Packages Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% product.packages.forEach(function(pkg) { %>
                <div
                    class="bg-slate-900 border border-slate-800 rounded-xl p-6 relative group overflow-hidden hover:border-indigo-500/50 transition duration-300">
                    <div class="absolute top-0 right-0 p-4 opacity-0 group-hover:opacity-100 transition-opacity">
                        <% if (user.role==='admin' ) { %>
                            <div class="flex gap-2">
                                <button
                                    onclick="openEditModal('<%= pkg.id %>', '<%= pkg.name %>', '<%= pkg.duration %>', '<%= pkg.original_price %>', '<%= pkg.discount_percent %>')"
                                    class="text-indigo-400 hover:text-indigo-300 bg-slate-800 p-1.5 rounded-lg">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                        </path>
                                    </svg>
                                </button>
                                <a href="/packages/delete/<%= pkg.id %>" onclick="return confirm('Are you sure?')"
                                    class="text-rose-400 hover:text-rose-300 bg-slate-800 p-1.5 rounded-lg">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                        </path>
                                    </svg>
                                </a>
                            </div>
                            <% } %>
                    </div>

                    <h3 class="text-lg font-semibold text-white mb-2">
                        <%= pkg.name %>
                    </h3>
                    <div class="flex items-baseline gap-2 mb-4">
                        <span class="text-3xl font-bold text-white">
                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                }).format(pkg.final_price) %>
                        </span>
                        <% if (pkg.discount_percent> 0) { %>
                            <span class="text-sm text-slate-500 line-through">
                                <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                    }).format(pkg.original_price) %>
                            </span>
                            <span
                                class="px-2 py-0.5 rounded-full bg-indigo-500/10 text-indigo-400 text-xs font-medium border border-indigo-500/20">
                                -<%= pkg.discount_percent %>%
                            </span>
                            <% } %>
                    </div>

                    <div class="flex items-center gap-2 text-sm text-slate-400 mb-6">
                        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= pkg.duration %> Days Validity
                    </div>

                    <!-- We removed "Buy Now" button as requested previously -->
                    <% if (user.role==='admin' ) { %>
                        <div class="text-xs text-slate-500 text-center italic mt-auto">
                            Admin Managed
                        </div>
                        <% } %>
                </div>
                <% }); %>

                    <% if (product.packages.length===0) { %>
                        <div
                            class="col-span-full text-center py-12 text-slate-500 italic bg-slate-900/50 rounded-xl border border-dashed border-slate-800">
                            No packages in this product yet.
                        </div>
                        <% } %>
        </div>

    </main>

    <% if (user.role==='admin' ) { %>
        <!-- Add Package Modal -->
        <div id="addPackageModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog"
            aria-modal="true">
            <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity"
                onclick="document.getElementById('addPackageModal').classList.add('hidden')"></div>
            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                    <div
                        class="relative transform overflow-hidden rounded-xl bg-slate-900 border border-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                        <form action="/packages/add" method="POST" class="p-6 space-y-4">
                            <input type="hidden" name="product_id" value="<%= product.id %>">
                            <h3 class="text-lg font-bold text-white mb-4">Add Package to <%= product.name %>
                            </h3>

                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Package Name</label>
                                <input type="text" name="name" placeholder="e.g. 1 Month Plan" required
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-400 mb-1">Price (VND)</label>
                                    <input type="number" name="original_price" required
                                        class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-400 mb-1">Duration (Days)</label>
                                    <input type="number" name="duration" required
                                        class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Discount (%)</label>
                                <input type="number" name="discount_percent" value="0" min="0" max="100"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>

                            <div class="pt-4 flex justify-end gap-3">
                                <button type="button"
                                    onclick="document.getElementById('addPackageModal').classList.add('hidden')"
                                    class="px-4 py-2 text-sm text-slate-400 hover:text-white">Cancel</button>
                                <button type="submit"
                                    class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg text-sm font-medium shadow-lg shadow-indigo-500/20">Add
                                    Package</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Package Modal -->
        <div id="editPackageModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog"
            aria-modal="true">
            <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity"
                onclick="document.getElementById('editPackageModal').classList.add('hidden')"></div>
            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                    <div
                        class="relative transform overflow-hidden rounded-xl bg-slate-900 border border-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                        <form action="/packages/update" method="POST" class="p-6 space-y-4">
                            <input type="hidden" name="id" id="edit_id">
                            <h3 class="text-lg font-bold text-white mb-4">Edit Package</h3>

                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Package Name</label>
                                <input type="text" name="name" id="edit_name" required
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-400 mb-1">Price (VND)</label>
                                    <input type="number" name="original_price" id="edit_price" required
                                        class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-400 mb-1">Duration (Days)</label>
                                    <input type="number" name="duration" id="edit_duration" required
                                        class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Discount (%)</label>
                                <input type="number" name="discount_percent" id="edit_discount" min="0" max="100"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>

                            <div class="pt-4 flex justify-end gap-3">
                                <button type="button"
                                    onclick="document.getElementById('editPackageModal').classList.add('hidden')"
                                    class="px-4 py-2 text-sm text-slate-400 hover:text-white">Cancel</button>
                                <button type="submit"
                                    class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg text-sm font-medium shadow-lg shadow-indigo-500/20">Update
                                    Package</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function openEditModal(id, name, duration, price, discount) {
                document.getElementById('edit_id').value = id;
                document.getElementById('edit_name').value = name;
                document.getElementById('edit_duration').value = duration;
                document.getElementById('edit_price').value = price;
                document.getElementById('edit_discount').value = discount;
                document.getElementById('editPackageModal').classList.remove('hidden');
            }
        </script>
        <% } %>

</body>

</html>