<div class="relative min-h-screen overflow-hidden text-slate-300 selection:bg-indigo-500/30">
    <!-- Background Effects -->
    <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
        <div
            class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-600/20 rounded-full blur-[100px] mix-blend-screen opacity-50 animate-blob">
        </div>
        <div
            class="absolute top-1/4 right-1/4 w-96 h-96 bg-purple-600/20 rounded-full blur-[100px] mix-blend-screen opacity-50 animate-blob animation-delay-2000">
        </div>
        <div
            class="absolute -bottom-32 left-1/3 w-96 h-96 bg-pink-600/20 rounded-full blur-[100px] mix-blend-screen opacity-50 animate-blob animation-delay-4000">
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-3 tracking-tight">
                Nâng cấp <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400">Trải
                    nghiệm</span> của bạn
            </h1>
            <p class="text-slate-400 text-base max-w-2xl mx-auto">Chọn gói dịch vụ phù hợp để mở khóa toàn bộ tính năng
                cao cấp và bứt phá hiệu suất công việc.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
            <!-- Left Column: Options -->
            <div class="lg:col-span-8 space-y-10">

                <!-- Step 1: Product Selection -->
                <% if (products.length !==1) { %>
                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-xl bg-slate-800/50 flex items-center justify-center font-bold text-indigo-400 border border-slate-700/50 shadow-lg shadow-indigo-500/10 backdrop-blur-sm">
                                1</div>
                            <h3 class="text-lg font-bold text-white">Chọn sản phẩm / Dịch vụ</h3>
                        </div>

                        <% if (products.length===0) { %>
                            <div
                                class="p-8 bg-slate-900/50 backdrop-blur-md border border-red-500/20 rounded-2xl text-center">
                                <div class="inline-flex p-3 rounded-full bg-red-500/10 text-red-400 mb-3"><i
                                        class="ri-error-warning-line text-2xl"></i></div>
                                <p class="text-slate-400">Chưa có sản phẩm nào đang hoạt động.</p>
                            </div>
                            <% } else { %>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                                    <% products.forEach((product, index)=> { %>
                                        <div onclick="selectProduct(<%= product.id %>)" id="prod-<%= product.id %>"
                                            class="product-card group relative p-6 bg-slate-900/60 backdrop-blur-xl border border-slate-800 rounded-3xl cursor-pointer transition-all duration-300 hover:border-indigo-500/50 hover:shadow-2xl hover:shadow-indigo-500/10 overflow-hidden isolate <%= index === 0 ? 'active border-indigo-500 ring-1 ring-indigo-500/50 bg-slate-800/80' : '' %>">

                                            <!-- Hover Gradient Background -->
                                            <div
                                                class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10">
                                            </div>

                                            <div class="flex items-start justify-between relative z-10">
                                                <div class="flex items-center gap-4">
                                                    <div
                                                        class="w-14 h-14 rounded-2xl bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700/50 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-inner">
                                                        <i
                                                            class="ri-box-3-fill text-2xl text-transparent bg-clip-text bg-gradient-to-br from-indigo-400 to-purple-400"></i>
                                                    </div>
                                                    <div>
                                                        <h4
                                                            class="font-bold text-white text-lg tracking-wide group-hover:text-indigo-300 transition-colors">
                                                            <%= product.name %>
                                                        </h4>
                                                        <p
                                                            class="text-xs font-medium text-slate-500 bg-slate-800/80 px-2 py-1 rounded-md inline-block mt-1">
                                                            <%= product.packages ? product.packages.length : 0 %>
                                                                Options
                                                        </p>
                                                    </div>
                                                </div>
                                                <div
                                                    class="check-icon w-6 h-6 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 flex items-center justify-center opacity-0 scale-50 transition-all duration-300 shadow-lg shadow-indigo-500/30 <%= index === 0 ? 'opacity-100 scale-100' : '' %>">
                                                    <i class="ri-check-line text-white text-sm font-bold"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } %>
                    </section>
                    <% } %>

                        <!-- Step 2: Duration Selection -->
                        <section id="duration-section"
                            class="transition-all duration-500 <%= products.length === 0 ? 'opacity-50 blur-sm pointer-events-none' : '' %>">
                            <div class="flex items-center gap-4 mb-6">
                                <div
                                    class="w-10 h-10 rounded-xl bg-slate-800/50 flex items-center justify-center font-bold text-indigo-400 border border-slate-700/50 shadow-lg shadow-indigo-500/10 backdrop-blur-sm">
                                    <%= products.length===1 ? 1 : 2 %>
                                </div>
                                <h3 class="text-lg font-bold text-white">Chọn thời hạn</h3>
                            </div>

                            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4" id="duration-buttons">
                                <!-- Injected via JS -->
                            </div>
                        </section>

                        <!-- Step 3: Package Selection -->
                        <section id="package-section"
                            class="transition-all duration-500 <%= products.length === 0 ? 'opacity-50 blur-sm pointer-events-none' : '' %>">
                            <div class="flex items-center gap-4 mb-6">
                                <div
                                    class="w-10 h-10 rounded-xl bg-slate-800/50 flex items-center justify-center font-bold text-indigo-400 border border-slate-700/50 shadow-lg shadow-indigo-500/10 backdrop-blur-sm">
                                    <%= products.length===1 ? 2 : 3 %>
                                </div>
                                <h3 class="text-lg font-bold text-white">Chọn gói dịch vụ</h3>
                            </div>

                            <!-- Info Alert -->
                            <div
                                class="bg-gradient-to-r from-amber-500/10 to-orange-500/5 border border-amber-500/10 rounded-2xl p-4 flex items-start gap-4 text-amber-300 mb-8">
                                <div class="p-2 bg-amber-500/10 rounded-lg shrink-0 mt-0.5"><i
                                        class="ri-lightbulb-flash-line"></i></div>
                                <div>
                                    <p class="font-medium text-amber-200">Lưu ý về giá</p>
                                    <p class="text-sm mt-1 text-amber-400/80">Giá hiển thị là đơn giá theo tháng (Đã áp
                                        dụng
                                        giảm giá nếu chọn thời hạn dài). Tiết kiệm hơn khi mua gói 6 tháng hoặc 1 năm.
                                    </p>
                                </div>
                            </div>

                            <div id="packages-container" class="space-y-4">
                                <!-- Packages will be injected here via JS -->
                            </div>
                            <div id="no-packages-msg"
                                class="hidden py-12 text-center bg-slate-900/50 rounded-3xl border border-dashed border-slate-800 text-slate-500">
                                <div class="mb-3"><i class="ri-inbox-archive-line text-4xl opacity-50"></i></div>
                                Sản phẩm này chưa có cấu hình gói dịch vụ.
                            </div>
                        </section>
            </div>

            <!-- Right Column: Summary (Sticky) -->
            <div class="lg:col-span-4">
                <div class="sticky top-8">
                    <div
                        class="bg-slate-900/80 backdrop-blur-2xl border border-slate-800 rounded-3xl p-6 shadow-2xl shadow-black/50 overflow-hidden relative">
                        <!-- Top Gradient Line -->
                        <div
                            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
                        </div>

                        <!-- Header -->
                        <h3 class="text-lg font-bold text-white mb-5 flex items-center gap-2">
                            <i class="ri-bill-line text-indigo-400"></i> Xác nhận đơn hàng
                        </h3>

                        <!-- Product & Package Compact Card -->
                        <div class="bg-slate-800/40 rounded-2xl p-4 mb-5 border border-slate-700/50">
                            <div class="flex items-center gap-3 mb-4">
                                <div
                                    class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500/20 to-purple-500/20 flex items-center justify-center text-indigo-400 border border-indigo-500/20 shrink-0">
                                    <i class="ri-box-3-fill text-lg"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-white font-bold truncate text-sm" id="summary-product-name">--</h4>
                                    <div class="mt-1">
                                        <span
                                            class="text-[10px] font-bold text-indigo-100 bg-indigo-500/20 border border-indigo-500/20 px-1.5 py-0.5 rounded"
                                            id="summary-pkg-name">--</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Compact Grid for Specs -->
                            <div
                                class="grid grid-cols-2 gap-y-3 gap-x-2 pt-3 border-t border-slate-700/50 text-[11px] uppercase font-bold tracking-wider text-slate-500">
                                <div>
                                    <p class="mb-0.5">Giới hạn UID</p>
                                    <p class="text-slate-200 font-mono text-sm" id="summary-pkg-uids">--</p>
                                </div>
                                <div>
                                    <p class="mb-0.5">Thời hạn</p>
                                    <p class="text-indigo-400 font-sans text-sm font-bold" id="summary-duration">1
                                        tháng</p>
                                </div>
                                <div>
                                    <p class="mb-0.5">Đơn giá</p>
                                    <p class="text-slate-200 font-mono text-sm" id="summary-base-price">0đ</p>
                                </div>
                                <div class="col-span-1">
                                    <p class="mb-0.5">Hết hạn</p>
                                    <p class="text-slate-200 font-sans text-sm font-medium" id="summary-expiry">--</p>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing Calculation -->
                        <div class="space-y-3 mb-6">
                            <div class="flex justify-between items-center text-sm">
                                <span class="text-slate-400">Tạm tính</span>
                                <span class="text-slate-200 font-mono" id="summary-subtotal">0đ</span>
                            </div>
                            <div class="flex justify-between items-center text-sm">
                                <span class="text-slate-400">Giảm giá <span
                                        class="bg-rose-500/10 text-rose-400 text-[10px] px-1.5 py-0.5 rounded ml-1 hidden"
                                        id="summary-discount-tag">-<span
                                            id="summary-discount-percent">0</span>%</span></span>
                                <span class="text-rose-400 font-mono font-bold" id="summary-discount">0đ</span>
                            </div>
                            <div class="flex justify-between items-center pt-3 border-t border-slate-800">
                                <span class="font-bold text-white">Tổng cộng</span>
                                <span
                                    class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400 font-mono"
                                    id="summary-total">0đ</span>
                            </div>
                        </div>

                        <!-- Wallet Info (Compact Strip) -->
                        <div
                            class="bg-slate-950/30 rounded-xl p-3 mb-4 flex items-center justify-between border border-slate-800/50">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-8 h-8 rounded-full bg-emerald-500/10 flex items-center justify-center text-emerald-400">
                                    <i class="ri-wallet-3-fill"></i>
                                </div>
                                <div>
                                    <p class="text-[10px] text-slate-500 font-bold uppercase">Số dư ví</p>
                                    <p class="text-sm font-bold text-emerald-400 font-mono">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                            }).format(user.balance) %>
                                    </p>
                                </div>
                            </div>
                            <a href="/recharge"
                                class="w-8 h-8 rounded-lg bg-slate-800 hover:bg-slate-700 flex items-center justify-center text-slate-400 transition"
                                title="Nạp tiền">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>

                        <!-- Error Alert -->
                        <div id="balance-warning"
                            class="hidden mb-4 p-3 rounded-xl bg-rose-500/10 border border-rose-500/20 flex items-start gap-2 animate-fade-in-up">
                            <i class="ri-alert-fill text-rose-500 mt-0.5"></i>
                            <p class="text-xs text-rose-300/80 leading-relaxed">Số dư không đủ để thực hiện giao dịch.
                            </p>
                        </div>

                        <!-- Button -->
                        <button onclick="submitOrder()" id="btn-submit"
                            class="w-full group bg-gradient-to-r from-indigo-600 to-purple-600 hover:to-indigo-600 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-indigo-600/20 transition-all duration-300 active:scale-[0.98] disabled:opacity-50 disabled:grayscale disabled:cursor-not-allowed">
                            <span class="flex items-center justify-center gap-2">
                                <i class="ri-secure-payment-line"></i> Thanh toán ngay
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-blob {
        animation: blob 10s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }

        33% {
            transform: translate(30px, -50px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }

        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    /* Custom Scrollbar for packages container if needed */
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(15, 23, 42, 0.5);
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(99, 102, 241, 0.5);
        border-radius: 4px;
    }
</style>

<script type="application/json" id="page-data">
    {
        "products": <%- JSON.stringify(products) %>,
        "userBalance": <%= user.balance || 0 %>
    }
</script>

<script>
    // Data passed from backend
    const { products, userBalance } = JSON.parse(document.getElementById('page-data').textContent);

    // State
    let selectedProductId = null;
    let selectedPackageId = null;
    let selectedPrice = 0; // Base monthly price
    let selectedMaxUids = 1;
    let selectedDuration = 1;

    // Derived from Product
    let productDiscounts = { month3: 0, month6: 0, year1: 0 };

    // Initialize
    if (products.length > 0) {
        selectProduct(products[0].id);
    } else {
        updateSummary();
    }

    function selectProduct(id) {
        selectedProductId = id;
        const product = products.find(p => p.id === id);

        // Parse discounts
        if (product.discount_config) {
            if (typeof product.discount_config === 'string') {
                productDiscounts = JSON.parse(product.discount_config);
            } else {
                productDiscounts = product.discount_config;
            }
        } else {
            productDiscounts = { month3: 0, month6: 0, year1: 0 };
        }

        renderDurationButtons();

        // Update UI: Product Cards
        document.querySelectorAll('.product-card').forEach(el => {
            el.classList.remove('active', 'border-indigo-500', 'ring-1', 'ring-indigo-500/50', 'bg-slate-800/80', 'shadow-indigo-500/20', 'shadow-lg');
            el.querySelector('.check-icon').classList.remove('opacity-100', 'scale-100');
        });
        const activeCard = document.getElementById(`prod-${id}`);
        if (activeCard) {
            activeCard.classList.add('active', 'border-indigo-500', 'ring-1', 'ring-indigo-500/50', 'bg-slate-800/80', 'shadow-lg', 'shadow-indigo-500/20');
            activeCard.querySelector('.check-icon').classList.add('opacity-100', 'scale-100');
        }

        // Render Packages
        const container = document.getElementById('packages-container');
        const noPkgMsg = document.getElementById('no-packages-msg');
        const pkgSection = document.getElementById('package-section');
        container.innerHTML = '';

        if (!product.packages || product.packages.length === 0) {
            noPkgMsg.classList.remove('hidden');
            container.classList.add('hidden');
            selectedPackageId = null;
        } else {
            noPkgMsg.classList.add('hidden');
            container.classList.remove('hidden');

            // Sort packages by price
            const sortedPackages = product.packages.sort((a, b) => parseFloat(a.original_price) - parseFloat(b.original_price));

            sortedPackages.forEach((pkg, index) => {
                const el = document.createElement('div');
                el.id = `pkg-${pkg.id}`;
                // Base classes
                let cls = "package-card group relative p-5 bg-slate-900/40 backdrop-blur-md rounded-2xl cursor-pointer border-2 transition-all duration-200";
                // Conditional classes
                if (index === 0) {
                    cls += " active border-indigo-500 bg-indigo-600/10 shadow-lg shadow-indigo-500/10";
                } else {
                    cls += " border-slate-800 hover:border-slate-600 hover:bg-slate-800/40";
                }
                el.className = cls;
                el.onclick = () => selectPackage(pkg.id);

                const uids = (pkg.max_uids == 0) ? 'Không giới hạn' : `<span class="font-mono text-indigo-300 font-bold">${pkg.max_uids}</span> UIDs`;

                el.innerHTML = `
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 relative z-10">
                        <div>
                            <h4 class="text-white font-bold text-lg leading-tight group-hover:text-indigo-200 transition-colors">${pkg.name}</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-medium bg-slate-800/50 text-slate-300">
                                    <i class="ri-hard-drive-2-line text-indigo-400"></i> ${uids}
                                </span>
                            </div>
                        </div>
                        <div class="text-right pl-10 sm:pl-0">
                            <p class="text-lg font-bold text-white font-mono tracking-tight pkg-price-display" data-original-price="${pkg.original_price}">
                                ${new Intl.NumberFormat('vi-VN').format(pkg.original_price)}<span class="text-xs font-sans font-normal text-slate-400">đ</span>
                            </p>
                            <p class="text-[10px] uppercase text-slate-500 font-bold tracking-wider">/ Tháng</p>
                        </div>
                    </div>
                `;
                container.appendChild(el);
            });

            // Auto select first package
            if (sortedPackages.length > 0) {
                selectPackage(sortedPackages[0].id);
            }

            // Initial price update
            updatePackagePrices();
        }

        document.getElementById('summary-product-name').innerText = product.name;
    }

    function renderDurationButtons() {
        const container = document.getElementById('duration-buttons');
        // Define buttons config
        const buttons = [
            { label: '1 Tháng', val: 1, discount: 0 },
            { label: '3 Tháng', val: 3, discount: productDiscounts.month3 || 0 },
            { label: '6 Tháng', val: 6, discount: productDiscounts.month6 || 0 },
            { label: '1 Năm', val: 12, discount: productDiscounts.year1 || 0 }
        ];

        container.innerHTML = buttons.map(btn => `
            <div onclick="selectDuration(${btn.val})" id="dur-${btn.val}" 
                class="duration-btn relative flex items-center justify-center p-4 rounded-2xl border-2 cursor-pointer transition-all duration-300 group overflow-hidden bg-slate-900/40 backdrop-blur-md border-slate-800 hover:border-indigo-500/30 hover:bg-indigo-600/10">
                
                ${btn.discount > 0 ? `
                <div class="absolute -top-3 -right-3 w-12 h-12 flex items-end justify-center transform rotate-45 translate-x-1 translate-y-1">
                </div>
                <div class="absolute top-0 right-0 bg-gradient-to-bl from-pink-500 to-rose-600 text-white text-[10px] font-bold px-2 py-1 rounded-bl-xl shadow-lg z-10">
                    -${btn.discount}%
                </div>` : ''}

                <span class="text-base font-bold text-slate-300 group-hover:text-indigo-400 transition-colors duration-200 value-text">${btn.label}</span>
            </div>
        `).join('');

        selectDuration(selectedDuration);
    }

    function selectPackage(id) {
        selectedPackageId = id;
        const product = products.find(p => p.id === selectedProductId);
        const pkg = product.packages.find(p => p.id === id);
        selectedPrice = parseFloat(pkg.original_price);
        selectedMaxUids = pkg.max_uids;

        // Update UI
        document.querySelectorAll('.package-card').forEach(el => {
            if (el.id === `pkg-${id}`) {
                el.classList.add('active', 'border-indigo-500', 'bg-indigo-600/10', 'shadow-lg', 'shadow-indigo-500/10');
                el.classList.remove('border-slate-800', 'hover:border-slate-600', 'hover:bg-slate-800/40');
            } else {
                el.classList.remove('active', 'border-indigo-500', 'bg-indigo-600/10', 'shadow-lg', 'shadow-indigo-500/10');
                el.classList.add('border-slate-800', 'hover:border-slate-600', 'hover:bg-slate-800/40');
            }
        });

        document.getElementById('summary-pkg-name').innerText = pkg.name;
        document.getElementById('summary-pkg-uids').innerText = (pkg.max_uids == 0) ? 'Không giới hạn' : pkg.max_uids;

        updateSummary();
    }

    function selectDuration(months) {
        selectedDuration = months;

        // Update UI Buttons
        document.querySelectorAll('.duration-btn').forEach(btn => {
            btn.classList.remove('border-indigo-500', 'bg-indigo-600/10');
            btn.classList.add('border-slate-800');
            btn.querySelector('.value-text').classList.remove('text-indigo-400');
        });

        const activeBtn = document.getElementById(`dur-${months}`);
        if (activeBtn) {
            activeBtn.classList.remove('border-slate-800');
            activeBtn.classList.add('border-indigo-500', 'bg-indigo-600/10');
            activeBtn.querySelector('.value-text').classList.add('text-indigo-400');
        }

        updatePackagePrices();
        updateSummary();
    }

    function updatePackagePrices() {
        let discountPercent = 0;
        if (selectedDuration === 3) discountPercent = productDiscounts.month3 || 0;
        if (selectedDuration === 6) discountPercent = productDiscounts.month6 || 0;
        if (selectedDuration === 12) discountPercent = productDiscounts.year1 || 0;

        document.querySelectorAll('.pkg-price-display').forEach(el => {
            const original = parseFloat(el.getAttribute('data-original-price'));
            const discounted = original * (1 - discountPercent / 100);
            el.innerHTML = new Intl.NumberFormat('vi-VN').format(Math.round(discounted)) + '<span class="text-xs font-sans font-normal text-slate-400">đ</span>';
        });
    }

    function updateSummary() {
        if (!selectedPackageId) {
            document.getElementById('summary-total').innerText = '0đ';
            return;
        }

        const formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

        // Find discount percent
        let discountPercent = 0;
        if (selectedDuration === 3) discountPercent = productDiscounts.month3 || 0;
        if (selectedDuration === 6) discountPercent = productDiscounts.month6 || 0;
        if (selectedDuration === 12) discountPercent = productDiscounts.year1 || 0;

        const subTotal = selectedPrice * selectedDuration;
        const discountAmount = Math.round((subTotal * discountPercent) / 100);
        const total = subTotal - discountAmount;

        const date = new Date();
        date.setDate(date.getDate() + (selectedDuration * 30));

        // Update DOM
        document.getElementById('summary-base-price').innerText = formatter.format(selectedPrice);
        document.getElementById('summary-duration').innerText = selectedDuration === 12 ? '1 năm' : (selectedDuration + ' tháng');
        document.getElementById('summary-expiry').innerText = date.toLocaleDateString('vi-VN');

        document.getElementById('summary-subtotal').innerText = formatter.format(subTotal);
        document.getElementById('summary-discount-percent').innerText = discountPercent;
        document.getElementById('summary-discount').innerText = '-' + formatter.format(discountAmount);
        document.getElementById('summary-total').innerText = formatter.format(total);

        // Toggle Discount Tag
        const discTag = document.getElementById('summary-discount-tag');
        if (discountPercent > 0) {
            discTag.classList.remove('hidden');
            discTag.classList.add('inline-flex');
        } else {
            discTag.classList.add('hidden');
            discTag.classList.remove('inline-flex');
        }

        // Check Balance
        const btn = document.getElementById('btn-submit');
        const warning = document.getElementById('balance-warning');

        if (total > userBalance) {
            btn.disabled = true;
            warning.classList.remove('hidden');
            const missing = total - userBalance;
            warning.querySelector('p').innerHTML = `Số dư không đủ để thực hiện giao dịch. Cần nạp thêm <span class="font-bold">${formatter.format(missing)}</span>`;
        } else {
            btn.disabled = false;
            warning.classList.add('hidden');
        }
    }

    async function submitOrder() {
        if (!selectedPackageId) return; // Should be disabled anyway

        if (!confirm('Xác nhận thanh toán gói dịch vụ này?')) return;

        const btn = document.getElementById('btn-submit');
        const originalContent = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = '<i class="ri-loader-4-line animate-spin text-2xl"></i>';

        try {
            const response = await fetch('/buy', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    package_id: selectedPackageId,
                    duration_months: selectedDuration
                })
            });
            const data = await response.json();

            if (data.success) {
                // Success animation or redirect
                btn.innerHTML = '<i class="ri-check-line text-2xl"></i> Thành công!';
                btn.classList.remove('from-indigo-600', 'to-purple-600');
                btn.classList.add('bg-emerald-500');

                setTimeout(() => {
                    window.location.href = data.redirect || '/history?tab=orders';
                }, 1000);
            } else {
                alert(data.message);
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        } catch (e) {
            console.error(e);
            alert('Có lỗi xảy ra khi kết nối tới máy chủ.');
            btn.disabled = false;
            btn.innerHTML = originalContent;
        }
    }
</script>