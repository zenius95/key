<div class="max-w-7xl mx-auto">
    <div class="bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-xl">
        <div
            class="p-6 border-b border-slate-800 bg-slate-900/50 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <h3 class="text-xl font-bold text-white tracking-tight">Lịch sử giao dịch</h3>
                <p class="text-slate-400 text-sm mt-1">Xem lại lịch sử đơn hàng và nạp tiền của bạn</p>
            </div>

            <div class="flex p-1 bg-slate-950 rounded-xl border border-slate-800">
                <a href="/history?tab=orders"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition <%= currentTab === 'orders' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:text-white' %>">
                    Lịch sử đơn hàng
                </a>
                <a href="/history?tab=deposits"
                    class="px-4 py-2 rounded-lg text-sm font-medium transition <%= currentTab === 'deposits' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-400 hover:text-white' %>">
                    Lịch sử nạp tiền
                </a>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <% if (currentTab==='orders' ) { %>
                    <thead>
                        <tr class="border-b border-slate-800 text-xs uppercase bg-slate-950/50 text-slate-400">
                            <th class="px-6 py-4 font-semibold">ID</th>
                            <th class="px-6 py-4 font-semibold">Gói dịch vụ</th>
                            <th class="px-6 py-4 font-semibold">Thanh toán</th>
                            <th class="px-6 py-4 font-semibold">Ngày tạo</th>
                            <th class="px-6 py-4 font-semibold">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-slate-800">
                        <% if (data.length===0) { %>
                            <tr>
                                <td colspan="5" class="px-6 py-8 text-center text-slate-500">
                                    Chưa có đơn hàng nào.
                                </td>
                            </tr>
                            <% } else { %>
                                <% data.forEach(order=> { %>
                                    <tr class="group hover:bg-slate-800/50 transition duration-150">
                                        <td class="px-6 py-4 font-medium text-slate-300">#<%= order.id %>
                                        </td>
                                        <td class="px-6 py-4 text-white font-medium">
                                            <%= order.package_name || order.product_name || 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 text-slate-300 font-mono">
                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                                }).format(order.amount) %>
                                        </td>
                                        <td class="px-6 py-4 text-slate-400">
                                            <%= new Date(order.createdAt).toLocaleString('vi-VN') %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (order.status==='completed' ) { %>
                                                <span
                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                                                    Hoàn thành
                                                </span>
                                                <% } else if (order.status==='pending' ) { %>
                                                    <span
                                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-500/10 text-amber-400 border border-amber-500/20">
                                                        Chờ xử lý
                                                    </span>
                                                    <% } else { %>
                                                        <span
                                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-700 text-slate-300 border border-slate-600">
                                                            <%= order.status %>
                                                        </span>
                                                        <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>

                    <% } else { %>
                        <!-- Deposits Table -->
                        <thead>
                            <tr class="border-b border-slate-800 text-xs uppercase bg-slate-950/50 text-slate-400">
                                <th class="px-6 py-4 font-semibold">Giao dịch ID</th>
                                <th class="px-6 py-4 font-semibold">Số tiền</th>
                                <th class="px-6 py-4 font-semibold">Số dư sau GD</th>
                                <th class="px-6 py-4 font-semibold">Thời gian</th>
                                <th class="px-6 py-4 font-semibold">Nội dung</th>
                            </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-slate-800">
                            <% if (data.length===0) { %>
                                <tr>
                                    <td colspan="5" class="px-6 py-8 text-center text-slate-500">
                                        Chưa có giao dịch nạp tiền nào.
                                    </td>
                                </tr>
                                <% } else { %>
                                    <% data.forEach(log=> { %>
                                        <tr class="group hover:bg-slate-800/50 transition duration-150">
                                            <td class="px-6 py-4 font-mono text-xs text-slate-400">
                                                <%= log.transactionId || 'N/A' %>
                                            </td>
                                            <td class="px-6 py-4 font-bold text-emerald-400 font-mono">
                                                +<%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                    currency: 'VND' }).format(log.balanceChange) %>
                                            </td>
                                            <td class="px-6 py-4 text-slate-300 font-mono">
                                                <%= log.newBalance ? new Intl.NumberFormat('vi-VN', { style: 'currency'
                                                    , currency: 'VND' }).format(log.newBalance) : 'N/A' %>
                                            </td>
                                            <td class="px-6 py-4 text-slate-400">
                                                <%= new Date(log.createdAt).toLocaleString('vi-VN') %>
                                            </td>
                                            <td class="px-6 py-4 text-slate-400 text-xs">
                                                Nạp tiền qua ngân hàng
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } %>
                        </tbody>
                        <% } %>
            </table>
        </div>

        <!-- Pagination -->
        <%- include('../partials/pagination') %>
    </div>
</div>