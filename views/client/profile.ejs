<div class="max-w-3xl mx-auto">
    <!-- Feedback Alerts -->
    <% if (success) { %>
        <div
            class="mb-6 bg-emerald-500/10 border border-emerald-500/20 rounded-xl p-4 flex items-center gap-3 text-emerald-400">
            <i class="ri-check-line text-xl"></i>
            <span class="text-sm font-medium">
                <%= success %>
            </span>
        </div>
        <% } %>

            <% if (error) { %>
                <div
                    class="mb-6 bg-rose-500/10 border border-rose-500/20 rounded-xl p-4 flex items-center gap-3 text-rose-400">
                    <i class="ri-error-warning-line text-xl"></i>
                    <span class="text-sm font-medium">
                        <%= error %>
                    </span>
                </div>
                <% } %>

                    <div class="bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-xl">
                        <div class="p-6 border-b border-slate-800 bg-slate-900/50">
                            <h3 class="text-lg font-bold text-white">Chỉnh sửa thông tin</h3>
                            <p class="text-sm text-slate-400 mt-1">Cập nhật thông tin cá nhân và bảo mật tài khoản</p>
                        </div>

                        <form action="/profile" method="POST" class="p-8 space-y-8">
                            <!-- Personal Info -->
                            <div class="space-y-5">
                                <h4
                                    class="text-sm font-bold text-indigo-400 uppercase tracking-widest border-b border-slate-800 pb-2">
                                    Thông tin cơ bản</h4>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-xs font-bold text-slate-400 mb-2 uppercase">Họ và
                                            tên</label>
                                        <input type="text" name="full_name" value="<%= user.full_name %>" required
                                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition">
                                    </div>
                                    <div>
                                        <label class="block text-xs font-bold text-slate-400 mb-2 uppercase">Số điện
                                            thoại</label>
                                        <input type="text" name="phone" value="<%= user.phone || '' %>"
                                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition">
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-xs font-bold text-slate-400 mb-2 uppercase">Email
                                            (Không thể thay đổi)</label>
                                        <input type="email" value="<%= user.email %>" disabled
                                            class="w-full bg-slate-900 border border-slate-800 rounded-xl px-4 py-3 text-slate-500 text-sm cursor-not-allowed">
                                    </div>
                                </div>
                            </div>

                            <!-- Security -->
                            <div class="space-y-5">
                                <h4
                                    class="text-sm font-bold text-indigo-400 uppercase tracking-widest border-b border-slate-800 pb-2">
                                    Bảo mật</h4>

                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-xs font-bold text-slate-400 mb-2 uppercase">Mật khẩu
                                            mới</label>
                                        <input type="password" name="password"
                                            placeholder="Để trống nếu không muốn đổi mật khẩu"
                                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition placeholder-slate-600">
                                    </div>
                                    <div>
                                        <label class="block text-xs font-bold text-slate-400 mb-2 uppercase">Xác nhận
                                            mật khẩu mới</label>
                                        <input type="password" name="confirm_password"
                                            placeholder="Nhập lại mật khẩu mới"
                                            class="w-full bg-slate-950 border border-slate-800 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition placeholder-slate-600">
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="pt-6 border-t border-slate-800 flex justify-end gap-4">
                                <button type="reset"
                                    class="px-6 py-2.5 rounded-xl text-sm font-bold text-slate-400 hover:text-white hover:bg-slate-800 transition">Hủy
                                    bỏ</button>
                                <button type="submit"
                                    class="px-8 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl text-sm font-bold shadow-lg shadow-indigo-500/20 transition transform hover:-translate-y-0.5">Lưu
                                    thay đổi</button>
                            </div>
                        </form>
                    </div>
</div>