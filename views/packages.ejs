<!DOCTYPE html>
<html lang="vi" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Package Manager - License Manager Pro</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        slate: {
                            850: '#151f32',
                            900: '#0f172a',
                            950: '#020617',
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-slate-950 text-slate-200 min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="border-b border-slate-800 bg-slate-900/50 backdrop-blur-md sticky top-0 z-30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center gap-3">
                    <div
                        class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                            </path>
                        </svg>
                    </div>
                    <span class="text-lg font-bold text-white tracking-tight">License Manager</span>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-xs text-slate-400 bg-slate-800 px-3 py-1 rounded-full border border-slate-700">
                        v1.2.0
                    </div>
                    <a href="/logout"
                        class="text-sm text-slate-400 hover:text-white transition flex items-center gap-1.5 px-3 py-1.5 rounded-lg hover:bg-slate-800">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                            </path>
                        </svg>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <!-- Navigation Tabs -->
        <div class="flex space-x-4 mb-8 border-b border-slate-800">
            <a href="/" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-slate-200 transition">
                Licenses
            </a>
            <a href="/users" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-slate-200 transition">
                Users
            </a>
            <a href="/packages" class="px-4 py-2 text-sm font-medium text-indigo-400 border-b-2 border-indigo-500">
                Packages
            </a>
            <a href="/orders" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-slate-200 transition">
                Orders
            </a>
        </div>

        <!-- Toolbar -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-white">Subscription Packages</h2>
            <% if (user.role==='admin' ) { %>
                <button onclick="document.getElementById('addModal').classList.remove('hidden')"
                    class="bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-xl transition shadow-lg shadow-indigo-500/20 flex items-center gap-2 text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4">
                        </path>
                    </svg>
                    Add Package
                </button>
                <% } %>
        </div>

        <!-- Packages Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% packages.forEach(function(pkg) { %>
                <div
                    class="bg-slate-900 border border-slate-800 rounded-2xl p-6 relative group hover:border-indigo-500/30 transition-all duration-300">

                    <% if (pkg.discount_percent> 0) { %>
                        <div
                            class="absolute top-4 right-4 bg-rose-500/10 text-rose-400 text-xs font-bold px-2 py-1 rounded-full border border-rose-500/20">
                            -<%= pkg.discount_percent %>%
                        </div>
                        <% } %>

                            <div class="mb-4">
                                <h3 class="text-lg font-semibold text-white mb-1">
                                    <%= pkg.name %>
                                </h3>
                                <p class="text-slate-400 text-sm">
                                    <%= pkg.duration %> Days
                                </p>
                            </div>

                            <div class="mb-6 flex items-baseline gap-2">
                                <span class="text-3xl font-bold text-white">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                        }).format(pkg.final_price) %>
                                </span>
                                <% if (pkg.discount_percent> 0) { %>
                                    <span class="text-sm text-slate-500 line-through decoration-slate-600">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                            }).format(pkg.original_price) %>
                                    </span>
                                    <% } %>
                            </div>

                            <div class="flex items-center gap-2 mt-auto pt-4 border-t border-slate-800">
                                <!-- Buy Button Form -->

                                <% if (user.role==='admin' ) { %>
                                    <button
                                        onclick="openEditModal('<%= pkg.id %>', '<%= pkg.name %>', '<%= pkg.duration %>', '<%= pkg.original_price %>', '<%= pkg.discount_percent %>')"
                                        class="bg-slate-800 hover:bg-slate-700 text-slate-300 px-3 py-2 rounded-lg text-sm font-medium transition">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                            </path>
                                        </svg>
                                    </button>
                                    <a href="/packages/delete/<%= pkg.id %>"
                                        onclick="return confirm('Delete this package?')"
                                        class="px-3 py-2 bg-rose-500/10 hover:bg-rose-500/20 text-rose-400 rounded-lg transition">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                            </path>
                                        </svg>
                                    </a>
                                    <% } %>
                            </div>
                </div>
                <% }); %>

                    <% if (packages.length===0) { %>
                        <div
                            class="col-span-full py-12 text-center text-slate-500 border border-dashed border-slate-800 rounded-2xl">
                            <svg class="h-12 w-12 mx-auto text-slate-600 mb-4" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                                    d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                            <p>No packages found. Create one to get started.</p>
                        </div>
                        <% } %>
        </div>

    </main>

    <!-- Add Modal -->
    <div id="addModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity"
            onclick="document.getElementById('addModal').classList.add('hidden')"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div
                    class="relative transform overflow-hidden rounded-xl bg-slate-900 border border-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md">
                    <form action="/packages/add" method="POST" class="p-6 space-y-4">
                        <h3 class="text-lg font-bold text-white mb-4">Add Package</h3>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">Package Name</label>
                            <input type="text" name="name" required placeholder="e.g 1 Month VIP"
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Duration (Days)</label>
                                <input type="number" name="duration" required placeholder="30"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Discount (%)</label>
                                <input type="number" name="discount_percent" value="0" min="0" max="100"
                                    oninput="calculateFinal('add')" id="add_discount"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">Original Price (VND)</label>
                            <input type="number" name="original_price" required placeholder="100000" id="add_orig"
                                oninput="calculateFinal('add')"
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>

                        <div
                            class="bg-indigo-500/10 p-3 rounded-lg border border-indigo-500/20 flex justify-between items-center">
                            <span class="text-sm text-indigo-300">Final Price:</span>
                            <span class="text-lg font-bold text-white" id="add_final">0 VND</span>
                        </div>

                        <div class="pt-4 flex justify-end gap-3">
                            <button type="button" onclick="document.getElementById('addModal').classList.add('hidden')"
                                class="px-4 py-2 text-sm text-slate-400 hover:text-white">Cancel</button>
                            <button type="submit"
                                class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg text-sm font-medium shadow-lg shadow-indigo-500/20">Create
                                Package</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/90 backdrop-blur-sm transition-opacity"
            onclick="document.getElementById('editModal').classList.add('hidden')"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div
                    class="relative transform overflow-hidden rounded-xl bg-slate-900 border border-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md">
                    <form action="/packages/update" method="POST" class="p-6 space-y-4">
                        <h3 class="text-lg font-bold text-white mb-4">Edit Package</h3>
                        <input type="hidden" name="id" id="edit_id">

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">Package Name</label>
                            <input type="text" name="name" id="edit_name" required
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Duration (Days)</label>
                                <input type="number" name="duration" id="edit_duration" required
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-400 mb-1">Discount (%)</label>
                                <input type="number" name="discount_percent" id="edit_discount" min="0" max="100"
                                    oninput="calculateFinal('edit')"
                                    class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-1">Original Price (VND)</label>
                            <input type="number" name="original_price" id="edit_orig" required
                                oninput="calculateFinal('edit')"
                                class="w-full bg-slate-950 border border-slate-800 rounded-lg px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>

                        <div
                            class="bg-indigo-500/10 p-3 rounded-lg border border-indigo-500/20 flex justify-between items-center">
                            <span class="text-sm text-indigo-300">Final Price:</span>
                            <span class="text-lg font-bold text-white" id="edit_final">0 VND</span>
                        </div>

                        <div class="pt-4 flex justify-end gap-3">
                            <button type="button" onclick="document.getElementById('editModal').classList.add('hidden')"
                                class="px-4 py-2 text-sm text-slate-400 hover:text-white">Cancel</button>
                            <button type="submit"
                                class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg text-sm font-medium shadow-lg shadow-indigo-500/20">Save
                                Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function calculateFinal(prefix) {
            const orig = parseFloat(document.getElementById(prefix + '_orig').value) || 0;
            const discount = parseFloat(document.getElementById(prefix + '_discount').value) || 0;

            const final = orig * (1 - discount / 100);

            document.getElementById(prefix + '_final').innerText = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(final);
        }

        function openEditModal(id, name, duration, originalPrice, discountPercent) {
            document.getElementById('edit_id').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_duration').value = duration;
            document.getElementById('edit_orig').value = originalPrice;
            document.getElementById('edit_discount').value = discountPercent;

            calculateFinal('edit');

            document.getElementById('editModal').classList.remove('hidden');
        }
    </script>
</body>

</html>